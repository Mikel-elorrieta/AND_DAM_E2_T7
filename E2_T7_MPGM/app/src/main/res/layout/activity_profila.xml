<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    >


    <TextView
        android:id="@+id/lblMaila"
        android:layout_width="330dp"
        android:layout_height="43dp"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="68dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/imgAurreikuspena"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/lblZikloa"
        android:layout_width="333dp"
        android:layout_height="43dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="20dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/lblMaila"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imgAurreikuspena"
        android:layout_width="177dp"
        android:layout_height="171dp"
        android:layout_marginStart="102dp"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="84dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/lblTelefono"
        android:layout_width="335dp"
        android:layout_height="43dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="12dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/lblZikloa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/lblGmail"
        android:layout_width="335dp"
        android:layout_height="40dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="9dp"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/lblTelefono"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/lblDni"
        android:layout_width="335dp"
        android:layout_height="48dp"
        android:layout_marginStart="112dp"
        android:layout_marginEnd="146dp"
        android:layout_marginBottom="11dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/lblGmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/lblIzena"
        android:layout_width="201dp"
        android:layout_height="62dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="28dp"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/lblDni"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAteraArgazki"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="142dp"
        android:layout_marginEnd="172dp"
        android:layout_marginBottom="16dp"
        android:text="Argazki"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>